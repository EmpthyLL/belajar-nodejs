<div class="row">
    <div class="col-md-6">
        <h2>Add User</h2>
        <form method="post" action="/contact">
        <div class="mb-3">
            <label for="nama" class="form-label">Nama User</label>
            <input type="text" autocomplete="off" required class="form-control" id="nama" name="nama">
        </div>
        <div class="mb-3">
            <label for="nohp" class="form-label">No. HP</label>
            <input type="text" autocomplete="off" required class="form-control" id="nohp" name="nohp">
        </div>
        <div class="mb-3">
            <label for="usia" class="form-label">Usia</label>
            <input type="number" autocomplete="off" required class="form-control" id="usia" name="usia">
        </div>
        <div class="mb-3">
            <label for="kerja" class="form-label">Pekerjaan</label>
            <input type="text" autocomplete="off" class="form-control" id="kerja" name="kerja">
        </div>
        <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <ul>        
                    <% errors.forEach(err => { %>
                        <li><%= err.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
        <button type="submit" name="tambah" class="btn btn-primary">Add User</button>
        </form>
    </div>
</div>