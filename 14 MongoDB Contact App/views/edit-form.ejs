<div class="row">
    <div class="col-md-6">
        <h2>Edit User </h2>
        <form method="post" action="/contact?_method=PUT">
        <div class="mb-3">
            <input type="hidden" autocomplete="off" value="<%= data.oldnama ? data.oldnama : data.nama %>" required class="form-control" id="oldnama" name="oldnama">
        </div>
        <div class="mb-3">
            <input type="hidden" autocomplete="off" value="<%= id %>" required class="form-control" id="key" name="key">
        </div>
        <div class="mb-3">
            <label for="nama" class="form-label">Nama User</label>
            <input type="text" autocomplete="off" value="<%= data.nama %>" required class="form-control" id="nama" name="nama">
        </div>
        <div class="mb-3">
            <label for="nohp" class="form-label">No. HP</label>
            <input type="text" autocomplete="off" value="<%= data.nohp %>" required class="form-control" id="nohp" name="nohp">
        </div>
        <div class="mb-3">
            <label for="usia" class="form-label">Usia</label>
            <input type="number" autocomplete="off" value="<%= data.usia %>" required class="form-control" id="usia" name="usia">
        </div>
        <div class="mb-3">
            <label for="kerja" class="form-label">Pekerjaan</label>
            <input type="text" autocomplete="off" value="<%= data.kerja %>" class="form-control" id="kerja" name="kerja">
        </div>
        <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <ul>        
                    <% errors.forEach(err => { %>
                        <li><%= err.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
        <button type="submit" onclick="return confirm('Anda yakin?')" name="tambah" class="btn btn-primary">Edit Profile</button>
        </form>
    </div>
</div>